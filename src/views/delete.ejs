<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete A User</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>


<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create Users</a>
    </div>


    <div class="form-add-new">
        <form action="/delete-user" method="POST">
            <fieldset>
                <legend>Delete new user</legend>
                <div class="input-group d-none">
                    <label>ID :</label>
                    <input type="text" name="userId" value="<%= infUser.id %>" />
                </div>
                <div class="input-group">
                    <label>Are you sure to delete this user with Email : </label>
                    <input type="text" id="emailId" name="email" value="<%= infUser.email %>" />
                </div>

                <div>
                    <button>Confirm </button>
                </div>
            </fieldset>
        </form>
    </div>


</body>

</html>